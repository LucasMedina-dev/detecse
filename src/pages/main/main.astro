---
import MainInfo from "./mainInfo.astro";
---

<main class="px-10 w-full h-4/5 overflow-hidden relative x-shadow">
  <video
    class="blur-sm absolute -bottom-[50%] left-0 -z-50 w-dvw"
    src="/darklight.mp4"
    loop
    autoplay
    muted></video>
  <div class="flex flex-col justify-center h-full">
    <MainInfo></MainInfo>
</main>

<style>
    .text-shadow{
        text-shadow: 0 0 4px rgb(73, 73, 73);
    }
    .x-shadow{
        box-shadow: inset 10px 0 10px -5px rgba(0, 0, 0, 1),
              inset -10px 0 10px -5px rgba(0, 0, 0, 1);
    }
</style>